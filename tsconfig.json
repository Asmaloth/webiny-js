{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "lib": ["es5", "dom"],
    "allowJs": true,
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": ["**/*.*"],
  "include": ["**/*.ts"],
  "ts-node": {
    "files": false,
    "typeCheck": false,
    "transpileOnly": true,
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "es2016",
      "module": "commonjs"
    }
  }
}
